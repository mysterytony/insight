{
    "manifest_version": 2,
    "name": "insight",
    "description": "",
    "version": "1.0",
    "page_action": {
        "default_popup": "popup.html",
        "default_title": "insight"
    },
    "permissions": [
        "activeTab",
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "eventPage.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ]
}